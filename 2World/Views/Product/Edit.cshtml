@model _2World.Models.Product
@{
    ViewData["Title"] = "Edit product";
}
<div class="wrapper">
    <div class="card-header py-3 d-flex justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Edit product</h5>
    </div>
    @{
        if (!string.IsNullOrEmpty(ViewBag.Msg))
        {
            <div class="mt-3 alert alert-@ViewBag.Status">@ViewBag.Msg</div>
        }
    }
    <div class="mt-2">
        <img src="@Url.Content("~/img/" + Model.Image_Path)" class="img-thumbnail" style="width: auto; height: 100px;" alt="Product Avatar" />
    </div>
    <form asp-action="Edit" method="post" class="row g-3 needs-validation mt-1" enctype="multipart/form-data" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Created_At" />
        <input type="hidden" asp-for="Image_Path" />
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Product name</label>
            <input asp-for="Name" type="text" class="form-control" id="validationName" placeholder="Iphone" required value="@Model.Name">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Product price</label>
            <input asp-for="Price" type="text" class="form-control" id="validationPrice" placeholder="1000000" required value="@Model.Price">
            <span asp-validation-for="Price" class="text-danger"></span>

        </div>
        <div class="col-md-6">
            <label asp-for="Quantity" class="form-label">Product quantity</label>
            <input asp-for="Quantity" type="text" class="form-control" id="validationQuantity" placeholder="1" required value="@Model.Quantity">
            <span asp-validation-for="Quantity" class="text-danger"></span>

        </div>
        <div class="col-md-6">
            <label for="newImage" class="form-label">New Avatar</label>
            <input id="newImage" name="newImage" type="file" class="form-control">
        </div>
        <div class="col-md-6">
            <label asp-for="Category_Id" class="form-label">Category</label>
            <select class="form-select" asp-for="Category_Id" aria-label="Category select">
                @foreach (var category in ViewBag.Categories)
                {
                    string isSeleted = category.Id == Model.Category_Id ? "selected" : "";
                    <!option value="@category.Id" @isSeleted>@category.Name</!option>
                    
                }
            </select>
            <span asp-validation-for="Category_Id" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Description" class="form-label">Product description</label>
            <textarea asp-for="Description" class="form-control" id="validationDesscription" rows="3">@Model.Description</textarea>
            
        </div>

        <div class="col-12">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>