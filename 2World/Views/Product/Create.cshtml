@model _2World.Models.Product
@{
    ViewData["Title"] = "Add product";
}
<div class="wrapper"> 
    <div class="card-header py-3 d-flex justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Add product</h5>
    </div>
    @{
        if (!string.IsNullOrEmpty(ViewBag.Msg))
        {
            <div class="mt-3 alert alert-@ViewBag.Status">@ViewBag.Msg</div>
        }
    }
    <form class="row g-3 needs-validation mt-5" novalidate asp-action="Create" enctype="multipart/form-data">
        <div asp-validation-summary="ModelOnly" class="alert-danger"></div>
        <div class="col-md-6">
            <label asp-for="Name" class="form-label">Product name</label>
            <input asp-for="Name" type="text" class="form-control" placeholder="Example: Iphone" required>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Price" class="form-label">Product price</label>
            <input asp-for="Price" type="text" class="form-control" placeholder="Example: 1000000" required>
            <span asp-validation-for="Price" class="text-danger"></span>
        </div>
        <div class="col-md-6">
            <label asp-for="Quantity" class="form-label">Product quantity</label>
            <input asp-for="Quantity" type="text" class="form-control" placeholder="Example: 1" required>
            <span asp-validation-for="Quantity" class="text-danger"></span>
        </div>

        <div class="col-md-6">
            <label asp-for="Image_Path" class="form-label">Product Avatar</label>
            <input asp-for="Image_Path" type="file" class="form-control">
        </div>
        <div class="col-md-6">
            <label asp-for="Category_Id" class="form-label">Category</label>
            <select asp-for="Category_Id" class="form-select" aria-label="Category select">
                @foreach (var category in ViewBag.Categories)
                {
                    <option value="@category.Id">@category.Name</option>
                }
            </select>
            <span asp-validation-for="Category_Id" class="text-danger"></span>
        </div>
        <div class="col-md-12">
            <label asp-for="Description" class="form-label">Product desscription</label>
            <textarea asp-for="Description" class="form-control"rows="3"></textarea>
            
        </div>

        <div class="col-12">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>