@model _2World.Models.Category
@{
    ViewData["Title"] = "Edit category";
}
<div class="wrapper">
    <div class="card-header py-3 d-flex justify-content-between">
        <h5 class="m-0 font-weight-bold text-primary">Edit category</h5>
    </div>
    @{
        if (!string.IsNullOrEmpty(ViewBag.Msg))
        {
            <div class="mt-3 alert alert-@ViewBag.Status">@ViewBag.Msg</div>
        }
    }
    <form asp-action="Edit" method="post" class="row g-3 needs-validation mt-5" novalidate>
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Id" />
        <input type="hidden" asp-for="Created_At" />
        <div class="col-md-6">
            <label class="form-label">Category Id</label>
            <input class="form-control" id="validationName"disabled required value="@Model.Id">

        </div><div class="col-md-6">
            <label asp-for="Name" class="form-label">Category name</label>
            <input asp-for="Name" type="text" class="form-control" id="validationName" placeholder="Iphone" required value="@Model.Name">
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="col-12">
            <button class="btn btn-primary" type="submit">Save</button>
        </div>
    </form>
</div>